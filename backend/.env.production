# Django Configuration
DEBUG=False
SECRET_KEY=your-production-secret-key-generate-random
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=recos_db_prod
DB_USER=postgres_user
DB_PASSWORD=strong_password
DB_HOST=db.yourdomain.com
DB_PORT=5432

# Cache/Redis Configuration
REDIS_URL=redis://redis.yourdomain.com:6379/0
CACHE_TIMEOUT=3600

# Celery Configuration
CELERY_BROKER_URL=redis://redis.yourdomain.com:6379/0
CELERY_RESULT_BACKEND=redis://redis.yourdomain.com:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# API Configuration
API_VERSION=v1
API_TIMEOUT=30

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=WARNING
